{
  "$schema": "https://github.com/qwc-services/qwc-ogc-service/raw/2024-lts/schemas/qwc-ogc-service.json",
  "service": "ogc",
  "config": {
    "default_qgis_server_url": "http://qwc-qgis-server/ows/"
  },
  "resources": {
    "wms_services": [
      {
        "name": "trdc/scan/threerivers",
        "online_resources": {
          "service": "/ows/trdc/scan/threerivers",
          "feature_info": "/api/v1/featureinfo/trdc/scan/threerivers",
          "legend": "/api/v1/legend/trdc/scan/threerivers"
        },
        "root_layer": {
          "name": "ThreeRivers",
          "title": "Three Rivers District Council Parking Restrictions",
          "layers": [
            {
              "name": "Restrictions",
              "title": "Restrictions",
              "layers": [
                {
                  "name": "Bays",
                  "title": "Bays",
                  "attributes": [
                    "RestrictionTypeID",
                    "RoadName",
                    "TimePeriodID",
                    "MaxStayID",
                    "NoReturnID",
                    "AdditionalConditionID",
                    "Last_MHTC_Check_UpdateDateTime",
                    "Last_MHTC_Check_UpdatePerson",
                    "FieldCheckCompleted",
                    "BayWidth",
                    "geometry",
                    "maptip"
                  ],
                  "queryable": true
                },
                {
                  "name": "Lines",
                  "title": "Lines",
                  "attributes": [
                    "RestrictionTypeID",
                    "RoadName",
                    "NoWaitingTimeID",
                    "NoLoadingTimeID",
                    "AdditionalConditionID",
                    "Last_MHTC_Check_UpdateDateTime",
                    "Last_MHTC_Check_UpdatePerson",
                    "FieldCheckCompleted",
                    "geometry",
                    "maptip"
                  ],
                  "queryable": true
                },
                {
                  "name": "RestrictionPolygons",
                  "title": "RestrictionPolygons",
                  "attributes": [
                    "RestrictionTypeID",
                    "NoWaitingTimeID",
                    "NoLoadingTimeID",
                    "TimePeriodID",
                    "AreaPermitCode",
                    "AdditionalConditionID",
                    "Last_MHTC_Check_UpdateDateTime",
                    "Last_MHTC_Check_UpdatePerson",
                    "FieldCheckCompleted",
                    "geometry",
                    "maptip"
                  ],
                  "queryable": true
                },
                {
                  "name": "CarParks",
                  "title": "CarParks",
                  "attributes": [
                    "Name",
                    "Nr P&D bays",
                    "NrPermitBays",
                    "Nr Disabled bays",
                    "TimePeriodID",
                    "MaxStayID",
                    "NrSharedUseBays",
                    "geometry",
                    "maptip"
                  ],
                  "queryable": true
                }
              ]
            },
            {
              "name": "Map Schedule Grids",
              "title": "Map Schedule Grids",
              "layers": [
                {
                  "name": "MapGrid",
                  "title": "MapGrid",
                  "attributes": [
                    "id",
                    "geometry",
                    "maptip"
                  ]
                }
              ]
            },
            {
              "name": "Background Mapping",
              "title": "Background Mapping",
              "layers": [
                {
                  "name": "StreetGazetteerRecords",
                  "title": "StreetGazetteerRecords",
                  "attributes": [
                    "gid",
                    "ASSET_ID",
                    "FEATURE_ID",
                    "SITE_CODE",
                    "SITE_NAME",
                    "LOCALITY",
                    "TOWN",
                    "LOCATION",
                    "ROADCLASS",
                    "HIERARCHY",
                    "CUSTOMER",
                    "AREA_NAME",
                    "DISTANCE",
                    "ROAD_TYPE",
                    "geometry",
                    "maptip"
                  ]
                },
                {
                  "name": "TRDC",
                  "title": "Three Rivers District Council",
                  "attributes": [
                    "name",
                    "geometry",
                    "maptip"
                  ],
                  "queryable": true
                },
                {
                  "name": "OS_Roads",
                  "title": "OS_Roads",
                  "queryable": true
                }
              ]
            }
          ]
        },
        "print_templates": [
          "A4_Sketch"
        ],
        "internal_print_layers": [
          "osm_bg"
        ]
      }
    ],
    "wfs_services": []
  }
}